# Environment Variables (Demo Mode)

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=Scholar

# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Stripe (Payment Processing - International)
VITE_STRIPE_PUBLIC_KEY=pk_test_demo_key_here
STRIPE_SECRET_KEY=sk_test_demo_key_here

# Paynow (Zimbabwe Mobile Money)
VITE_PAYNOW_INTEGRATION_ID=demo_integration_id
VITE_PAYNOW_INTEGRATION_KEY=demo_integration_key

# Feature Flags
VITE_ENABLE_PREMIUM=true
VITE_ENABLE_PAYMENTS=true
VITE_DEMO_MODE=true

# Analytics (Optional)
VITE_MIXPANEL_TOKEN=your_mixpanel_token
VITE_POSTHOG_KEY=your_posthog_key

# Email Service (Optional - for transactional emails)
VITE_RESEND_API_KEY=your_resend_api_key
